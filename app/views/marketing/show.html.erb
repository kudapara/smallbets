<script>
document.addEventListener('click', function(event) {
  document.querySelectorAll('.community-popup[open]').forEach(function(details) {
    if (!details.contains(event.target)) {
      details.removeAttribute('open');
    }
  });
});

function hideIncompleteRow(gridSelector) {
  const grid = document.querySelector(gridSelector);
  if (!grid) return;
  const children = Array.from(grid.children);
  if (children.length === 0) return;

  // Get computed style for gap and item width
  const item = children[0];
  const itemStyle = window.getComputedStyle(item);
  const itemWidth = item.offsetWidth + parseFloat(itemStyle.marginLeft) + parseFloat(itemStyle.marginRight);

  const gridStyle = window.getComputedStyle(grid);
  const gridWidth = grid.clientWidth - parseFloat(gridStyle.paddingLeft) - parseFloat(gridStyle.paddingRight);
  const gap = parseFloat(gridStyle.gap) || 0;

  // Calculate columns
  const columns = Math.floor((gridWidth + gap) / (itemWidth + gap));
  if (columns < 1) return;

  // Calculate how many items to show
  const fullRows = Math.floor(children.length / columns);
  const showCount = fullRows * columns;

  children.forEach((child, idx) => {
    child.style.display = idx < showCount ? '' : 'none';
  });
}

window.addEventListener('DOMContentLoaded', () => hideIncompleteRow('.community-grid'));
window.addEventListener('resize', () => hideIncompleteRow('.community-grid'));
</script>
